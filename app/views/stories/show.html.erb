<div class="row text-center">
  <h1><%= @story.title %></h1>
</div>


<div class="row html">
  <div class="col-md-8 col-md-offset-2  well">
    <p><%= @story.html %></p>
  </div>
</div>

<div class="row html">
  <div class="col-md-8 col-md-offset-2  well">
    <p><%= image_tag @story.headerimg.url, class: 'img-responsive' if @story.headerimg? %></p>
  </div>
</div>

<div class="row text-center html">
<%= link_to "Edit", edit_story_path, class: 'btn btn-default' %> <%= link_to "Delete", @story, method: :delete, class: 'btn btn-success' %>
</div>
