<div class="row text-center">

  <h1>Hi, guys.</h1>
  <p class="tagline">Please sign in below or <%= link_to('create an account', '/users/new')%>.</p>
</div>


<div class="row text-center signin">

  <%= form_tag(:sessions, method: 'post', class: 'form-inline') do %>
    <div class="form-group">
    <%= text_field_tag :username, nil, placeholder: "Enter username", class: 'form-control' %>
    <%= password_field_tag :password, nil, placeholder: "password", class: "form-control" %>
    <%= submit_tag "Sign In", class: 'btn btn-default' %>

    </div>
  <% end %>

</div>